# ==============================================
# ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env and fill in your values
# ==============================================

# Database connection string (PostgreSQL)
# When running via Docker Compose, use the service name 'postgres' as the hostname
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URI=postgresql://postgres:postgres@postgres:5432/mhportal_cms_v3

# Docker PostgreSQL Credentials (Optional - can be hardcoded in docker-compose.yml for local dev)
# Only needed if you want to externalize database credentials from docker-compose.yml
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=mhportal_cms_v3

# Used to encrypt JWT tokens - Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-jwt-key-here

# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Secret used to authenticate cron jobs - Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here

# Used to validate preview requests - Generate with: openssl rand -base64 32
PREVIEW_SECRET=your-preview-secret-here

# ==============================================
# S3/R2 Storage Configuration
# ==============================================
# Cloudflare R2 or AWS S3 credentials
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_REGION=auto
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET=your-bucket-name
R2_ENDPOINT=your-account-id.r2.cloudflarestorage.com

# ==============================================
# Email Configuration (Nodemailer SMTP)
# ==============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com
